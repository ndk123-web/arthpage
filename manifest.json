{
  "manifest_version": 3,
  "name": "Web Summarizer",
  "version": "0.1.0",
  "icons": {
        "16": "icons/arthpage-opt.png",
        "48": "icons/arthpage-opt.png",
        "128": "icons/arthpage-opt.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
        "16": "icons/arthpage-opt.png",
        "48": "icons/arthpage-opt.png",
        "128": "icons/arthpage-opt.png"
    }
  },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/options.html"
}
