{
  "manifest_version": 3,
  "name": "Web Summarizer",
  "version": "0.1.0",
  "action": {
    "default_popup": "index.html"   
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
    "service_worker": "src/background/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"]
    }
  ]
}
